@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex: <http://example.com/> .

<http://example.com/ontology> rdf:type owl:Ontology .

ex:color rdf:type owl:Class ;
		owl:oneOf ( ex:Red ex:Green ex:Blue ) .

ex:Red rdf:type ex:color .
ex:Green rdf:type ex:color .
ex:Blue rdf:type ex:color .

ex:product rdf:type owl:Class ;
    owl:hasValue [        a ex:color ;        owl:hasValue ex:Red    ] .
