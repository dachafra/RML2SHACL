@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex: <http://example.com/> .

<http://example.com/ontology> rdf:type owl:Ontology .

ex:Book rdf:type owl:Class .

ex:Author
    rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:range xsd:string .

ex:hasAuthor
    rdf:type owl:ObjectProperty ;
    rdf:type owl:FunctionalProperty ;
    rdfs:domain ex:Book ;
    rdfs:range ex:Author ;
    owl:inverseOf ex:isAuthorOf .

ex:isAuthorOf
    rdf:type owl:ObjectProperty ;
    owl:inverseOf ex:hasAuthor .

ex:name
    rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:Author ;
    rdfs:range xsd:string .

ex:BookShape
    rdf:type owl:Class ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty ex:hasAuthor ;
        owl:cardinality 1 ;
        owl:onClass ex:Author ;
    ] .