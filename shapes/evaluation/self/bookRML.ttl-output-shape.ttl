@prefix ex: <http://www.example.com/books/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://www.example.com/books/BookMap/shape> a sh:NodeShape ;
    sh:class ex:book ;
    sh:nodeKind sh:IRI ;
    sh:pattern "http://example.com/book/.*" ;
    sh:property [ sh:datatype xsd:string ;
            sh:minCount 0 ;
            sh:nodeKind sh:Literal ;
            sh:path ex:description ],
        [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:path ex:title ],
        [ sh:datatype xsd:decimal ;
            sh:maxCount 5 ;
            sh:minCount 5 ;
            sh:minInclusive 0 ;
            sh:nodeKind sh:Literal ;
            sh:path ex:price ;
            sh:pattern "^-?[0-9]+\\.[0-9]{1,2}$" ],
        [ sh:datatype xsd:date ;
            sh:nodeKind sh:Literal ;
            sh:path ex:publish_date ;
            sh:pattern "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" ],
        [ sh:datatype xsd:string ;
            sh:nodeKind sh:Literal ;
            sh:path ex:author ],
        [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:path ex:genre ] ;
    sh:targetClass ex:book .

